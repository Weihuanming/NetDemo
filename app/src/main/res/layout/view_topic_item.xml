<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:fresco="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/cityname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="111111"
        android:textSize="18sp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/cityname"
        android:text="2222222"
        android:textSize="18sp"
        android:layout_marginTop="10dp"/>

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/topic_weather_pic"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_below="@id/date"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="80dp"
        android:layout_alignParentLeft="true"
        fresco:placeholderImage="@mipmap/ic_launcher"
        fresco:actualImageScaleType="fitXY"/>

    <TextView
        android:id="@+id/temperature"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="tttttt"
        android:textSize="18sp"
        android:layout_below="@id/date"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/topic_weather_pic"/>

    <TextView
        android:id="@+id/topic_weather"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_below="@id/date"
        android:layout_toRightOf="@+id/temperature"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:text="ttttttt"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/pm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_below="@id/topic_weather_pic"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:text="3333333"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/wind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/pm"
        android:layout_below="@id/topic_weather_pic"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:text="3333333"
        android:textSize="18sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@id/pm"/>

</RelativeLayout>